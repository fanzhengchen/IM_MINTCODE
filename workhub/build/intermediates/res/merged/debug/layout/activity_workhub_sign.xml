<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_launchr"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_launchr"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_white_back"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            />
        <RadioGroup
            android:id="@+id/rg_sign_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <RadioButton
                android:id="@+id/rbtn_phone"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:textColor="@drawable/text_white_blue"
                android:background="@drawable/rbtn_left_wihte_blue_bg"
                android:gravity="center"
                android:button="@null"
                android:textSize="18sp"
                android:checked="true"
                android:text="@string/phone_sign"
                />
            <RadioButton
                android:id="@+id/rbtn_mail"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:textColor="@drawable/text_white_blue"
                android:background="@drawable/rbtn_right_blue_white_bg"
                android:gravity="center"
                android:button="@null"
                android:textSize="18sp"
                android:text="@string/mail_sign"
                />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sign_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_circle1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_gray"
            />
        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_line_gray"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_circle2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_gray"
            />
        <ImageView
            android:id="@+id/iv_line2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_line_gray"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_circle3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_gray"
            />
        <ImageView
            android:id="@+id/iv_line3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_line_gray"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_circle4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/circle_gray"
            />
    </LinearLayout>

    <include
        android:id="@+id/include_phone_sign"
        layout="@layout/layout_workhub_phone_sign"
        />
    <include
        android:id="@+id/include_phone_password"
        layout="@layout/layout_workhub_phone_password"
        />
    <include
        android:id="@+id/include_team"
        layout="@layout/layout_workhub_create_team"
        />
    <include
        android:id="@+id/include_check_info"
        layout="@layout/layout_workhub_check_info"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="25dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/bg_blue_round"
        />
</LinearLayout>