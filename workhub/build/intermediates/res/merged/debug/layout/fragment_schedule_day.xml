<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_round"
    >
    <TextView
        android:id="@+id/tv_day_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
    />
    <ImageView
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <ListView
        android:id="@+id/lv_day_event"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="3dp"
        android:divider="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:scrollbars="none"
        android:listSelector="#00000000"
        >
    </ListView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tv_new_event"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/new_event"
               android:layout_centerInParent="true"
               android:textColor="@color/black"
               android:textSize="15sp"
               android:drawableLeft="@drawable/icon_new_event"
               android:drawablePadding="8dp"
               android:singleLine="true"
               android:ellipsize="end"
               />
       </RelativeLayout>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_new_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_meeting"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:drawableLeft="@drawable/icon_new_meetin"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>