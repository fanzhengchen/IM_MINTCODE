<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="fill_parent"
        android:layout_below="@+id/ll_accpet_list_null"
    	android:gravity="center"
    	android:orientation="vertical"
       >
   <RelativeLayout 
       android:id="@+id/ll_promise_getdageview"
        android:layout_width="230dp"
        android:layout_height="120dp"
       >
       <LinearLayout 
        android:id="@+id/ll_approval_accpet_promise"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_seletor_press_blue_white"
        >
        <ImageView 
            android:id="@+id/iv_approval_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/icon_promise2"
            />
        <TextView 
            android:id="@+id/tv_approval_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/approval_promise"
            android:textSize="20sp"
            android:textColor="@color/black"
            />      
    </LinearLayout>
         <TextView
                android:id="@+id/iv_approval_accpet_promise_tagrt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle_red"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
       
       
   </RelativeLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:id="@+id/iv_null3" />
    <RelativeLayout 
       android:id="@+id/ll_copy_getdageview"
        android:layout_width="230dp"
        android:layout_height="120dp"
       >
     	<LinearLayout 
        android:id="@+id/ll_approval_accpet_copy_to"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_seletor_press_blue_white"
        >
        <ImageView
            android:id="@+id/iv_copyto_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/icon_copy_to"
            />
        <TextView 
            android:id="@+id/tv_copyto_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/approval_copy_to"
            android:textSize="20sp"
            />
    	</LinearLayout>
    	
     	 <TextView
                android:id="@+id/iv_approval_accpet_copy_to_tagrt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle_red"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
    </RelativeLayout>
  </LinearLayout>

</RelativeLayout>
