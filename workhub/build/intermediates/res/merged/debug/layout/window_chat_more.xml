<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_menu"
    android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_msg_history"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/icon_msg_setting"
            android:drawablePadding="10dp"
            android:paddingRight="17.5dp"
            android:paddingLeft="17.5dp"
            android:gravity="center_vertical"
            android:text="@string/message_history"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_gray" />

        <TextView
            android:id="@+id/tv_chat_setting"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/icon_chat_setting"
            android:drawablePadding="10dp"
            android:paddingLeft="17.5dp"
            android:paddingRight="17.5dp"
            android:gravity="center_vertical"
            android:text="@string/message_setting"
            android:textColor="@color/black" />

</LinearLayout>