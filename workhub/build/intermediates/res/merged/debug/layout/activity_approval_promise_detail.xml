<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bar_launchr"
    android:id="@+id/rel_content"
    android:orientation="vertical" >
	  <RelativeLayout
        android:id="@+id/title_approval_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"        
        >
	        <ImageView 
	        android:id="@+id/iv_appect_detail_back"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:paddingLeft="15dp"
	        android:paddingRight="9dp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/icon_back"/>
	
		<TextView
		    android:id="@+id/tv_approval_title"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_centerInParent="true"
		    android:gravity="center"
		    android:text="@string/apply_details"
		    android:textColor="@color/black"
		    android:textSize="16sp" />

		  <ImageView
			  android:id="@+id/iv_more_handle"
			  android:layout_width="wrap_content"
			  android:layout_height="match_parent"
			  android:src="@drawable/icon_chat_more"
			  android:layout_alignParentRight="true"
			  android:paddingRight="@dimen/standard_right_margin"
			  android:paddingLeft="@dimen/standard_left_margin"
			  android:layout_centerVertical="true"/>

	  </RelativeLayout>

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="@color/line_color"
		/>
	    
<ScrollView
    android:id="@+id/sv_approve"
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_weight="1"
        android:layout_below="@+id/title_approval_bar"
        android:layout_above="@+id/ll_approval_promise_bottom"
        >

  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    	<LinearLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@color/white"
    	    android:layout_marginTop="17dp"
    	    android:orientation="vertical"
    	    >
    	   <LinearLayout 
    	       android:layout_width="match_parent"
    	       android:layout_height="wrap_content"
    	       android:orientation="vertical"
    	       >

			   <LinearLayout
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:orientation="horizontal"
				   >
				   <TextView
					   android:id="@+id/tv_accpet_detail_title"
					   android:layout_width="0dp"
					   android:layout_weight="1"
					   android:layout_height="wrap_content"
					   android:layout_margin="15dp"
					   android:gravity="center_vertical"
					   android:textSize="16sp"
					   android:textColor="@color/black"
					   android:ellipsize="end"
					   />
				   <TextView
					   android:id="@+id/tv_approval_detail_self_state"
					   android:layout_width="wrap_content"
					   android:minWidth="50dp"
					   android:layout_height="wrap_content"
					   android:text=""
					   android:textColor="@color/white"
					   android:layout_gravity="center_vertical"
					   android:textSize="12sp"
					   android:gravity="center"
					   android:layout_marginRight="15dp"
					   android:singleLine="true"
					   />
			   </LinearLayout>


    	       <LinearLayout
    	           android:id="@+id/ll_approval_promise_apply"
    	           android:layout_width="match_parent"
    	           android:layout_height="wrap_content"
				   android:paddingLeft="15dp"
				   android:paddingRight="15dp"
    	           android:paddingTop="5dp"
    	           android:paddingBottom="5dp"
				   android:background="@color/bg_approve"
				   android:orientation="horizontal"
    	           >
    	           <ImageView
                    android:id="@+id/iv_accpet_detail_person_head"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@color/blue_launchr" />
    	           <LinearLayout
					   android:layout_width="0dp"
					   android:layout_weight="1"
					   android:layout_height="30dp"
					   android:layout_marginLeft="5dp"
					   android:orientation="vertical"
					   android:layout_gravity="center_vertical"
					   >
					   <TextView
						   android:id="@+id/tv_accpet_detail_name"
						   android:layout_width="wrap_content"
						   android:layout_height="0dp"
						   android:layout_weight="1"
						   android:textSize="12sp"
						   android:textColor="@color/chat_below_text"
						   />
					   <TextView
						   android:id="@+id/tv_acppet_detail_taketime"
						   android:layout_width="wrap_content"
						   android:layout_height="0dp"
						   android:layout_weight="1"
						   android:textSize="12sp"
						   android:textColor="@color/chat_below_text"
						   android:lines="1"
						   />
				   </LinearLayout>

				   <LinearLayout
					   android:layout_width="wrap_content"
					   android:layout_height="30dp"
					   android:orientation="vertical"
					   >

					   <LinearLayout
						   android:layout_width="wrap_content"
						   android:layout_height="0dp"
						   android:layout_weight="1"
						   android:orientation="horizontal"
						   >
						   <TextView
							   android:id="@+id/tv_accpet_detail_state"
							   android:layout_width="wrap_content"
							   android:layout_height="wrap_content"
							   android:drawableLeft="@drawable/icon_task_clock"
							   android:drawablePadding="5dp"
							   android:gravity="center"
							   android:layout_gravity="bottom"
							   android:text="@string/accpect_state"
							   android:textSize="12sp"
							   android:ellipsize="end"
							   android:textColor="@color/red_launchr"
							   />
						   <TextView
							   android:id="@+id/tv_accpet_detail_lasttime"
							   android:layout_width="wrap_content"
							   android:layout_height="wrap_content"
							   android:drawableLeft="@drawable/icon_deadline"
							   android:layout_gravity="right|bottom"
							   android:drawablePadding="5dp"
							   android:textSize="12sp"
							   android:ellipsize="end"
							   android:gravity="center"
							   android:textColor="@color/red_launchr"
							   android:lines="1"
							   />
					   </LinearLayout>
				   </LinearLayout>

    	     </LinearLayout> 
    	   </LinearLayout>
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:src="@color/line_color"
				/>
			<LinearLayout
				android:id="@+id/ll_approval_do"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone"
				>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:orientation="horizontal"
					>

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:gravity="right|center_vertical"
						android:layout_weight="1"
						android:clickable="false"
						android:background="@drawable/white_bg_selected"
						>
						<TextView
							android:id="@+id/tv_accpet_refuse"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:background="@drawable/shape_approval_refuse"
							android:paddingLeft="20dp"
							android:paddingRight="20dp"
							android:paddingTop="5dp"
							android:paddingBottom="5dp"
							android:textSize="15sp"
							android:text="@string/accpect_refuse"
							android:textColor="@color/task_priority_red"
							/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:gravity="center"
						android:layout_weight="1"
						android:clickable="false"
						android:background="@drawable/white_bg_selected"
						>
						<TextView
							android:id="@+id/tv_accpet_recall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:background="@drawable/shape_approval_recall"
							android:paddingLeft="20dp"
							android:paddingRight="20dp"
							android:paddingTop="5dp"
							android:paddingBottom="5dp"
							android:textSize="15sp"
							android:text="@string/accpect_recall"
							android:textColor="@color/task_priority_yellow"
							/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:gravity="left|center_vertical"
						android:layout_weight="1"
						android:clickable="false"
						android:background="@drawable/white_bg_selected"
						>
						<TextView
							android:id="@+id/tv_accpet_pass"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:background="@drawable/shape_approval_accept"
							android:paddingLeft="20dp"
							android:paddingRight="20dp"
							android:paddingTop="5dp"
							android:paddingBottom="5dp"
							android:textSize="15sp"
							android:text="@string/accpect_pass"
							android:textColor="@color/green_launchr"
							/>
					</LinearLayout>

				</LinearLayout>
				<ImageView

					android:layout_width="fill_parent"
					android:layout_height="14dp"
					android:src="@color/gray_bar_launchr"
					/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_approval_leave"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:orientation="horizontal"
				android:layout_marginRight="15dp"
				android:layout_marginLeft="15dp"
				>
				<TextView
					android:id="@+id/tv_apply_type_leave"
					android:layout_width="90dp"
					android:layout_height="fill_parent"
					android:gravity="center_vertical"
					android:textSize="15sp"
					android:textColor="@color/meeting_gray"
					/>
				<TextView
					android:id="@+id/tv_apply_content_leave"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="15sp"
					/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_approval_cost"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:orientation="horizontal"
				android:layout_marginRight="15dp"
				android:layout_marginLeft="15dp"
				>
				<TextView
					android:id="@+id/tv_apply_type_cost"
					android:layout_width="90dp"
					android:layout_height="fill_parent"
					android:gravity="center_vertical"
					android:textSize="15sp"
					android:textColor="@color/meeting_gray"
					/>
				<TextView
					android:id="@+id/tv_apply_content_cost"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="15sp"
					/>
			</LinearLayout>

			<ImageView

				android:layout_width="fill_parent"
				android:layout_height="14dp"
				android:src="@color/gray_bar_launchr"
				/>
    	    <RelativeLayout
				    android:id="@+id/rl_approval_accpect_person"
    	        	android:layout_width="match_parent"
    	            android:layout_height="wrap_content"
    	            android:orientation="horizontal"    	            

    	            >
    	        <TextView
					android:id="@+id/tv_approval_accepct_person"
    	            android:layout_width="90dp"
    	            android:layout_height="45dp"
    	            android:gravity="center_vertical"
					android:layout_marginLeft="15dp"
    	            android:textSize="15sp"
    	            android:textColor="@color/meeting_gray"
    	            android:text="@string/accpect_promise_person"  	            
    	        />
    	       <com.mintcode.launchr.widget.CollapsibleTextView
    	            android:id="@+id/tv_accpect_preson"
    	            android:layout_width="wrap_content"
    	            android:layout_height="fill_parent"
				   android:layout_toRightOf="@+id/tv_approval_accepct_person"
    	            android:gravity="center_vertical"
    	            android:textSize="15sp"
				    android:layout_marginTop="10dp"
				    android:layout_marginBottom="10dp"
    	        />
    	    </RelativeLayout>
    	    <LinearLayout 
    	        android:id="@+id/ll_approval_cc"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical"
    	        
    	        >
    	    	<ImageView 
					   
					    android:layout_width="fill_parent"
					    android:layout_height="1px"
					    android:src="@color/line_color"
					    />
    	    <RelativeLayout
					android:id="@+id/ll_approval_cc_person"
    	        	android:layout_width="match_parent"
    	            android:layout_height="wrap_content"
    	            android:orientation="horizontal"    	            
    	            >
    	        <TextView
					android:id="@+id/tv_approval_cc"
    	            android:layout_width="90dp"
    	            android:layout_height="45dp"
					android:layout_marginLeft="15dp"
    	            android:gravity="center_vertical"
    	            android:textSize="15sp"
    	            android:textColor="@color/meeting_gray"
    	            android:text="@string/accpect_promise_copy"  	            
    	        />
    	       <com.mintcode.launchr.widget.CollapsibleTextView
    	            android:id="@+id/tv_accpect_preson_copyto"
    	            android:layout_width="wrap_content"
    	            android:layout_height="fill_parent"
				    android:layout_toRightOf="@+id/tv_approval_cc"
    	            android:gravity="center_vertical"
    	            android:textSize="15sp"
				   android:layout_marginTop="10dp"
				   android:layout_marginBottom="10dp"
    	        />

    	    </RelativeLayout>
     </LinearLayout>

    	    <LinearLayout
    	        android:id="@+id/ll_approval_attchement"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical"
    	         >
    	        
    	        
    	   
    	    	<ImageView 
					    android:layout_width="fill_parent"
					    android:layout_height="1px"
					    android:src="@color/line_color"
					    />
    	    <LinearLayout 
    	        	android:layout_width="match_parent"
    	            android:layout_height="wrap_content"
    	            android:orientation="horizontal"    	            
    	            android:layout_marginRight="15dp"
    	            android:layout_marginLeft="15dp"
    	            >

    	        <TextView
    	            android:id="@+id/tv_apply_see_attachment"
    	            android:layout_width="75dp"
    	            android:layout_height="wrap_content"
    	            android:paddingTop="5dp"
    	            android:gravity="center_vertical"
    	            android:text="@string/accpect_attachment"
    	            android:textColor="@color/meeting_gray"
    	            android:textSize="15sp" />
    	 
		       <com.mintcode.launchr.photo.util.NoScrollGridView
		           android:id="@+id/gv_apply_add_photo"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:padding="15dp"
		           android:numColumns="3"
		           android:scrollbars="none"
		           android:verticalSpacing="25dp"
		           >
           
       			</com.mintcode.launchr.photo.util.NoScrollGridView>
    	             
    	    </LinearLayout>
     </LinearLayout>
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:src="@color/line_color"
				/>
    	    <LinearLayout 
    	            android:id="@+id/ll_accpet_detail_mark"
    	        	android:layout_width="match_parent"
    	            android:layout_height="wrap_content"
    	            android:orientation="horizontal"
    	            >
				<TextView
					android:layout_width="90dp"
					android:layout_height="fill_parent"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:gravity="top"
					android:textSize="15sp"
					android:text="@string/remark"
					android:textColor="@color/meeting_gray"
					/>
    	        <TextView
    	            android:id="@+id/tv_accpet_detail_mark"
    	            android:layout_width="wrap_content"
    	            android:layout_height="fill_parent"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:layout_marginRight="15dp"
    	            android:gravity="center_vertical"
    	            android:textSize="15sp"  
    	            android:autoLink="email|phone|web"
    	        />
    	             
    	    </LinearLayout>
    	    
    	    <ImageView 
					    android:layout_width="fill_parent"
					    android:layout_height="1px"
					    android:src="@color/line_color"
					    />
    	     <ImageView
					    android:layout_width="fill_parent"
					    android:layout_height="15dp"
					    android:src="@color/gray_bar_launchr"
					    />
    	</LinearLayout>
	  <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:background="@color/white"
		  android:orientation="vertical"
		  >
		  <com.mintcode.launchr.view.ViewPagerIndicator
			  android:id="@+id/indicator_message_select"
			  android:paddingTop="10dp"
			  android:layout_marginLeft="10dp"
			  android:layout_marginRight="10dp"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/white"
			  >
		  </com.mintcode.launchr.view.ViewPagerIndicator>
		  <ImageView
			  android:layout_width="fill_parent"
			  android:layout_height="1px"
			  android:src="@color/line_color"
			  />
	  </LinearLayout>
    	<com.mintcode.launchr.view.NoscrollListView
    	    android:id="@+id/lv_approval_speach_list"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
			android:layout_marginBottom="100dp"
    	    >
    	</com.mintcode.launchr.view.NoscrollListView>
     </LinearLayout>
</ScrollView>
<LinearLayout
	        android:id="@+id/ll_approval_promise_bottom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		    android:paddingRight="5dp"
		    android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:layout_alignParentBottom="true"
	   		 android:focusableInTouchMode="true" 
	   		 android:background="@color/white"
			>	
			  <ImageView 
		        android:id="@+id/iv_accpet_detail_add"
		        android:layout_width="wrap_content"
		        android:layout_gravity="bottom"
		        android:layout_height="35dp"
		        android:paddingRight="10dp"
		        android:paddingLeft="10dp"
		        android:src="@drawable/btn_chat_send"
	       		 />		
				<EditText 
				    android:id="@+id/edt_approval_sendmessage"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:padding="7dp"
				    android:layout_weight="1"
				    android:layout_gravity="center_vertical"
				    android:layout_marginRight="5dp"
				    android:background="@drawable/bg_chat_input"
					android:inputType="textMultiLine"
					android:maxLines="4"
					android:singleLine="false"
				    android:hint="@string/accpect_send_hit"
				    android:textSize="15sp"
				    >
				    
				</EditText>
				<ImageView
				    android:id="@+id/btn_accpect_detail_send"
				    android:layout_width="wrap_content"
					android:layout_height="35dp"
					android:layout_gravity="bottom"
					android:background="@color/white"
					android:textColor="@color/gray_launchr"
					android:src="@drawable/btn_chat_text_send"
					android:textSize="15sp"/>
			</LinearLayout>	    
	
</LinearLayout>
