<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/gesture_bg">

    <LinearLayout
		android:id="@+id/top_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/my_team_title"
		android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
		       		      android:layout_height="50dp"
		       		      >
       		<TextView
				  android:id="@+id/title"
				  android:textSize="16sp"
				  android:textColor="@color/white"
				  android:layout_centerInParent="true"
				  android:layout_width="wrap_content"
				  android:text="@string/my_my_team"
				  android:layout_height="wrap_content"/>
			<ImageView
				android:id="@+id/iv_back"
				android:layout_width="40dp"
				android:layout_height="50dp"
				android:layout_alignParentLeft="true"
				android:scaleType="center"
				android:visibility="gone"
				android:src="@drawable/icon_white_back" />
       		
   		</RelativeLayout>
   		
    </LinearLayout>
    
    <TextView 
	    	  android:textSize="14sp"
	    	  android:textColor="@color/white"
		android:layout_below="@+id/top_layout"
	    	  android:layout_centerInParent="true"
	    	  android:layout_width="wrap_content"
	    	  android:layout_gravity="center_horizontal"
	    	  android:layout_marginTop="20dp"
		android:text="wtf"
	    	  android:id="@+id/tv_name"
	    	  android:layout_height="wrap_content"/>
    
 	<ListView
		android:id="@+id/lv_team"
		android:layout_below="@+id/tv_name"
		android:layout_above="@+id/bottom_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
 	    android:layout_marginTop="20dp"
 	    />
    <ImageView
		android:id="@+id/bottom_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_margin="6dp"
		android:src="@drawable/icon_launchr_small_logo"
		/>
</RelativeLayout>
