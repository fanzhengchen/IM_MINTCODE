<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_task_backcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_task_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/new_task_left"
        android:paddingRight="@dimen/new_task_right" >

        <TextView
            android:id="@+id/new_task_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_task_height"
            android:gravity="center_vertical"
            android:text="@string/new_task_back"
            android:textColor="@color/blue_launchr"
            android:textSize="@dimen/new_task_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/new_task_set_label"
            android:textColor="@color/black"
            android:textSize="@dimen/new_task_textsize" />

        <TextView
            android:id="@+id/new_task_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_task_height"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="@string/new_task_save"
            android:textColor="@color/blue_launchr"
            android:textSize="@dimen/new_task_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rel_choose_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_task_height"
            android:background="@color/white">

            <EditText
                android:id="@+id/new_task_title_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_add_label"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/input_label_name"
                android:layout_marginLeft="@dimen/standard_left_margin"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/new_task_textcolor"
                android:textSize="@dimen/new_task_textsize" />

            <TextView
                android:id="@+id/tv_add_label"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="@string/accpect_apply_add"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@color/blue_launchr"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/new_task_right"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_choose_label"
            android:text="@string/add_label_from_in"
            android:layout_marginLeft="@dimen/standard_left_margin"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>


    </RelativeLayout>
</LinearLayout>