<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_change_play"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:text="@string/calendar_copy"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_msg_copy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:text="@string/calendar_copy"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line_copy"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_msg_task"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/msg_change_to_task"
            android:visibility="gone"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line_task"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_msg_schedule"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:text="@string/msg_change_to_schedule"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line_schedule"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_msg_resend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:text="@string/msg_resend"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line_resend"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_msg_mark"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/message_mark_point"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/line_more"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_msg_more"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:text="@string/show_more_text"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
