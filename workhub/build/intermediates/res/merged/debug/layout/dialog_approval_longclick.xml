<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
            android:id="@+id/fragment_content_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
    <LinearLayout 
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        
        <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
        <RelativeLayout 
            android:id="@+id/rl_dialog_recall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/white_bg_selected"
            >
             <TextView 
            android:id="@+id/tv_dialog_recall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/accpect_recall"
            android:textColor="@color/gray_launchr"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_recall"
            />
            
        </RelativeLayout>
       
        <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
         <RelativeLayout 
            android:id="@+id/rl_dialog_refuse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/white_bg_selected"
            >
         <TextView 
            android:id="@+id/tv_dialog_refuse"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/accpect_refuse"
            android:textColor="@color/gray_launchr"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_refuse"
            />
         </RelativeLayout>
         <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
         <RelativeLayout 
            android:id="@+id/rl_dialog_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/white_bg_selected"
            >
          <TextView 
              android:id="@+id/tv_dialog_pass"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/accpect_pass"
            android:drawablePadding="10dp"
            android:textColor="@color/gray_launchr"
            android:textSize="15sp"
            android:drawableLeft="@drawable/icon_pass"
            />
           </RelativeLayout>
         <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
         <TextView 
             android:id="@+id/tv_dialog_canel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/calendar_canel"
            android:textColor="@color/blue_launchr"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>
