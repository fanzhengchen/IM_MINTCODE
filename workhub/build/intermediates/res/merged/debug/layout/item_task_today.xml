<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_get_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_group"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_color"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/task_red_color"
                    />
                <CheckBox
                    android:id="@+id/cb_group_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/task_finish_select_state"
                    android:button="@null"
                    android:focusable="false"
                    />
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="麻麻说，名字一定要长，这样别人看完我的名字就会干掉他，我可以巴拉巴拉巴拉"
                    android:layout_marginLeft="7dp"
                    android:singleLine="true"
                    android:paddingRight="40dp"
                    android:textColor="@color/black"
                    android:gravity="bottom"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_for_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_task_for_project"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="7dp"
                        android:textSize="14sp"
                        android:text="project"
                        android:singleLine="true"
                        android:textColor="@color/chat_below_text"
                        />

                    <ImageView android:id="@+id/iv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/gray_clock"
                        android:scaleType="center"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/chat_below_text"
                        android:layout_marginRight="7dp"
                        />


                    <ImageView
                        android:id="@+id/iv_attament"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/icon_paper_clip"
                        android:scaleType="center"
                        />
                    <ImageView
                        android:id="@+id/iv_speach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/icon_speach"
                        android:scaleType="center"
                        />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Done"
                        android:textColor="@color/task_gray_text"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/iv_datareport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_datareport"
                        android:scaleType="center"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rel_group"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="1/3"
                    android:textColor="@color/task_gray_text"
                    />
                <ImageView
                    android:id="@+id/iv_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingRight="15dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_left_direction"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>