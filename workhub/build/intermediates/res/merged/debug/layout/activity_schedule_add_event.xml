<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_launchr"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/tv_schedule_add_event_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_left_margin"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/calendar_canel"
            android:textSize="15sp"
            android:textColor="@color/blue_launchr"
            />
        
        <TextView
            android:id="@+id/tv_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/calendar_addorder"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView 
            android:id="@+id/tv_schedule_add_event_save"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="end|center_vertical"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/standard_right_margin"
            android:text="@string/calendar_save"
            android:textSize="15sp"
            android:textColor="@color/blue_launchr"
            />
    </RelativeLayout>
    
    <ScrollView 
         android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
        >
     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/grey_launchr"
	    android:focusableInTouchMode="true"
	    android:orientation="vertical" > 
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/et_schedule_add_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
		android:focusableInTouchMode="true"
         >
        <EditText
            android:id="@+id/edt_schedule_add_event_title"
            android:layout_width="fill_parent"
            android:minHeight="45dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/standard_left_margin"
            android:background="@null"
            android:hint="@string/schedule_event_title"
            android:textColorHint="@color/gray_launchr"
            android:textSize="15sp"
            android:maxLength="120"
             >
        </EditText>       
    </RelativeLayout>

         <RelativeLayout
             android:layout_marginTop="14dp"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:visibility="gone">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:gravity="center"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="@dimen/standard_left_margin"
                 android:text="@string/calendar_orderWholeDay"
                 android:textSize="15sp"
                 android:textColor="@color/meeting_gray"
                 >
             </TextView>

             <CheckBox
                 android:id="@+id/cb_schedule_set_allday"
                 android:layout_width="40dp"
                 android:layout_height="30dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/standard_right_margin"
                 android:checked="false"
                 android:button="@null"
                 android:background="@drawable/checkbox_seletor_blue"
                 />
         </RelativeLayout>
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:background="@color/line_color"
             android:contentDescription="@string/app_name"
             android:visibility="gone"
             />
         <RelativeLayout
             android:id="@+id/rl_schedule_add_event_set_time"
             android:layout_width="match_parent"
             android:layout_height="90dp"
             android:clickable="true"
             android:background="@drawable/white_bg_selected"
             android:orientation="vertical" >
             <TextView
                 android:id="@+id/tv_schedule_null"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:gravity="center"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="@dimen/standard_left_margin"
                 android:text="@string/calendar_schedule_time"
                 android:textSize="15sp"
                 android:textColor="@color/meeting_gray"
                 >
             </TextView>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:layout_toRightOf="@+id/tv_schedule_null"
                 android:layout_marginLeft="22dp"
                 android:orientation="vertical"
                 >
                 <LinearLayout
                     android:id="@+id/ll_schedule_add_event_alternate1"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_weight="1"
                     android:orientation="horizontal"
                     >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:gravity="center"
                         android:text="@string/calendar_alternate1"
                         android:textSize="12sp"
                         android:textColor="@color/gray_launchr"
                         />

                     <View
                         android:layout_width="15dp"
                         android:layout_height="match_parent" />

                     <TextView
                         android:id="@+id/tv_schedule_add_event_alternate1"
                         android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:gravity="center"
                         android:textSize="12sp"
                         />
                 </LinearLayout>
                 <LinearLayout
                     android:id="@+id/ll_schedule_add_event_alternate2"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_weight="1"
                     android:orientation="horizontal"
                     >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:gravity="center"
                         android:text="@string/calendar_alternate2"
                         android:textSize="12sp"
                         android:textColor="@color/gray_launchr"
                         />

                     <View
                         android:layout_width="15dp"
                         android:layout_height="match_parent" />

                     <TextView
                         android:id="@+id/tv_schedule_add_event_alternate2"
                         android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:gravity="center"
                         android:text=""
                         android:textSize="12sp"
                         />
                 </LinearLayout>

                 <LinearLayout
                     android:id="@+id/ll_schedule_add_event_alternate3"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_weight="1"
                     android:orientation="horizontal"
                     >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:gravity="center"
                         android:text="@string/calendar_alternate3"
                         android:textSize="12sp"
                         android:textColor="@color/gray_launchr"
                         />

                     <View
                         android:layout_width="15dp"
                         android:layout_height="match_parent" />

                     <TextView
                         android:id="@+id/tv_schedule_add_event_alternate3"
                         android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:gravity="center"
                         android:text=""
                         android:textSize="12sp"
                         />
                 </LinearLayout>
             </LinearLayout>

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:layout_centerVertical="true"
                 android:src="@drawable/icon_right_on"
                 android:layout_alignParentRight="true"
                 android:paddingLeft="30dp"
                 android:paddingRight="@dimen/standard_right_margin"
                 android:scaleType="center"
                 android:contentDescription="@string/app_name"
                 />
         </RelativeLayout>

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:background="@color/light_gray"
             android:contentDescription="@string/app_name"
             />
    <RelativeLayout
        android:id="@+id/rl_schedule_add_event_place"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_schedule_add_event_place"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/standard_left_margin"
            android:text="@string/new_event_place"
            android:textSize="15sp"
            android:textColor="@color/meeting_gray"
             >
        </TextView> 

        <EditText
            android:id="@+id/tv_schedule_add_event_only_place"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/tv_schedule_add_event_place"
            android:layout_marginRight="@dimen/standard_right_margin"
            android:singleLine="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:text=""
            android:textSize="15sp"
            android:maxEms="100"
            />
    </RelativeLayout>
         <com.mintcode.launchr.app.MapLoadView
             android:id="@+id/ll_map"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:visibility="gone"
             android:orientation="vertical">
         </com.mintcode.launchr.app.MapLoadView>


         <LinearLayout
             android:layout_marginTop="14dp"
             android:layout_marginBottom="14dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@color/light_gray"
             android:gravity="center">
             <TextView
                 android:id="@+id/tv_add_place_xy"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/add_place_xy"
                 android:textColor="@color/blue_launchr"
                 android:drawableLeft="@drawable/icon_meeting_blue_point"
                 android:drawablePadding="5dp"
                 android:background="@drawable/bg_blue_round_border"/>
         </LinearLayout>

    <LinearLayout 
        android:id="@+id/ll_reapet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/standard_top_margin"
	    android:background="@color/light_gray"
	    />
    <RelativeLayout
        android:id="@+id/rl_schedule_add_event_repeat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true" 
        android:background="@drawable/white_bg_selected"
        android:visibility="gone"
         >
   
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:paddingLeft="@dimen/standard_left_margin"
           android:gravity="center"
           android:text="@string/calendar_repeat"
           android:textSize="15sp"
           android:textColor="@color/meeting_gray"
             />
       <TextView 
           android:id="@+id/tv_schedule_add_event_repeat"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:layout_alignParentRight="true"
           android:drawableRight="@drawable/icon_right_on"
           android:drawablePadding="@dimen/standard_tv_right_arrow"
           android:layout_marginRight="@dimen/standard_right_margin"
           android:gravity="center"
           android:text="@string/calendar_never"
           android:textSize="14sp"
           android:textColor="@color/gray_launchr"
             />
    </RelativeLayout>
        
    </LinearLayout>

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:background="@color/line_color"
             android:contentDescription="@string/app_name"
             />
         <RelativeLayout
             android:background="@color/white"
             android:layout_width="match_parent"
             android:layout_height="40dp" >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:gravity="center"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="@dimen/standard_left_margin"
                 android:text="@string/calendar_improtant"
                 android:textSize="15sp"
                 android:textColor="@color/meeting_gray"
                 >
             </TextView>
             <CheckBox
                 android:id="@+id/cb_schedule_set_important"
                 android:layout_width="40dp"
                 android:layout_height="30dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/standard_right_margin"
                 android:checked="false"
                 android:button="@null"
                 android:background="@drawable/checkbox_seletor_red"
                 />
         </RelativeLayout>
	
    <RelativeLayout
        android:layout_marginTop="14dp"
        android:id="@+id/rl_schedule_add_event_notification"
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:clickable="true" 
        android:background="@drawable/white_bg_selected"
        >
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:paddingLeft="@dimen/standard_left_margin"
           android:gravity="center"
           android:text="@string/calendar_notification"
           android:textSize="15sp"
           android:textColor="@color/meeting_gray"
             />
       <TextView 
           android:id="@+id/tv_schedule_add_event_notification"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:layout_alignParentRight="true"
           android:drawableRight="@drawable/icon_right_on"
           android:drawablePadding="@dimen/standard_tv_right_arrow"
           android:layout_marginRight="@dimen/standard_right_margin"
           android:gravity="center"
           android:text="@string/calendar_not_remind"
           android:textSize="14sp"
           android:textColor="@color/black"
             />
    </RelativeLayout>

         <RelativeLayout
             android:background="@color/white"
             android:layout_marginTop="14dp"
             android:layout_width="match_parent"
             android:layout_height="40dp" >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:gravity="center"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="@dimen/standard_left_margin"
                 android:text="@string/only_me_see"
                 android:textSize="15sp"
                 android:textColor="@color/meeting_gray"
                 >
             </TextView>
             <CheckBox
                 android:id="@+id/cb_only_me_see"
                 android:layout_width="40dp"
                 android:layout_height="30dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/standard_right_margin"
                 android:checked="false"
                 android:button="@null"
                 android:background="@drawable/checkbox_seletor_red"
                 />
         </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:focusable="true" 
		android:focusableInTouchMode="true"
         >       
       <EditText 
           android:id="@+id/edt_schedule_add_event_remark"
           android:layout_width="fill_parent"
           android:layout_height="150dp"
           android:background="@null"
           android:gravity="top"
           android:paddingLeft="@dimen/standard_left_margin"
           android:layout_marginTop="8dp"
           android:layout_marginRight="@dimen/standard_right_margin"
           android:inputType="textMultiLine"
           android:hint="@string/calendar_detail"
           android:textColorHint="@color/gray_launchr"
           android:textSize="15sp"
           android:maxEms="120"
             />      
    </LinearLayout>

	   </LinearLayout>
    </ScrollView>
	
        
</LinearLayout>
