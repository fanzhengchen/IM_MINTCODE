<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
    <RelativeLayout
        android:id="@+id/title_approval_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_approval_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="9dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_approval_message_num"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/iv_approval_back"
            android:gravity="center"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_approval_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toLeftOf="@+id/iv_approval_add"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_bg_selected"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_chat_search" />
            <TextView
                android:id="@+id/tv_approval_title_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/approval_all"
                android:textSize="16sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:drawableRight="@drawable/icon_down_direction"
                android:drawablePadding="5dp"
                />
        <ImageView
            android:id="@+id/iv_approval_add"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_bg_selected"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add_bule"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_null2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:src="@color/line_color"
        />


        <ListView
            android:id="@+id/lv_approval_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
        <FrameLayout
            android:id="@+id/fl_approval_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />




</LinearLayout>