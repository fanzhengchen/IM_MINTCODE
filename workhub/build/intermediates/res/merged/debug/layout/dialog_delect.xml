<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white"
    	android:orientation="vertical"
        >
         <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
         
        <TextView 
            android:id="@+id/tv_dialog_title"
	        android:layout_width="match_parent"
			android:layout_height="30dp"
			android:layout_marginTop="10dp"
			android:gravity="center_horizontal"
		    android:text="@string/confirm"
		    android:textSize="20sp"
	        />
         <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
     <TextView 
	        android:id="@+id/tv_dialog_context"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:gravity="center_horizontal|center_vertical"
	        android:textSize="15sp"
	        
	        android:text="@string/delect_delect_this"
        />
    <RelativeLayout 
             android:id="@+id/rl_dialog_reapect_only"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
             android:clickable="true"
            android:background="@drawable/white_bg_selected"
            >
             <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
            <TextView 
                android:id="@+id/tv_repeact_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/repeact_delect_only"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="@color/blue_launchr"
            />
        </RelativeLayout>  
      <RelativeLayout 
             android:id="@+id/rl_dialog_reapect_all"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
             android:clickable="true"
            android:background="@drawable/white_bg_selected"
            >
             <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	      />
            <TextView 
            android:id="@+id/tv_repeact_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/repeact_delect_all"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="@color/blue_launchr"
            />
        </RelativeLayout>  
     <ImageView 
	   	     android:layout_width="match_parent"
	   	     android:layout_height="1px"
	   	     android:background="@color/line_color"
   	     />
     <LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="44dp"
        	android:orientation="horizontal"
    	    >
        <RelativeLayout 
            android:id="@+id/rl_dialog_meeting_delect"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/white_bg_selected"
            >
            <TextView
                android:id="@+id/tv_delect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="@string/del"
            android:textSize="15sp"
            android:textColor="@color/blue_launchr"
            />
            
        </RelativeLayout>        
        <ImageView 
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/line_color"
            />
         <RelativeLayout 
             android:id="@+id/rl_dialog_meeting_canel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
             android:clickable="true"
            android:background="@drawable/white_bg_selected"
            >
            <TextView
                android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/calendar_canel"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="@color/blue_launchr"
            />
        </RelativeLayout>                   
    	</LinearLayout>
    	<ImageView 
   	     android:layout_width="match_parent"
   	     android:layout_height="1px"
   	     android:background="@color/line_color"
   	     />
        
        
        
    </LinearLayout>
    
</RelativeLayout>
