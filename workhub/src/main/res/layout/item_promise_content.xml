<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/white_bg_selected"
    >
    <RelativeLayout 
        android:id="@+id/ll_promise_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >


         <ImageView
                    android:id="@+id/iv_promise_person_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_login_head" />
         <LinearLayout             
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_toRightOf="@id/iv_promise_person_head"
             android:layout_marginLeft="5dp"            
             android:orientation="vertical"
             >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:gravity="center_vertical"
               android:layout_weight="1"
               >

               <ImageView
                   android:id="@+id/iv_unread_target"
                   android:layout_width="5dp"
                   android:layout_height="5dp"
                   android:layout_margin="5dp"
                   android:src="@drawable/circle_red"
                   android:layout_alignParentLeft="true"
                    android:visibility="gone"
                   android:layout_gravity="bottom"
                   />
               <TextView 
                   android:id="@+id/tv_promise_person_name"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="simtih"
                   android:textSize="14sp"
                   android:ellipsize="end"
                   android:lines="1"
                   android:layout_gravity="bottom"
                   />
                <TextView 
                   android:id="@+id/tv_promise_limit_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:text="11:00"
                   android:textSize="14sp"
                   android:textColor="@color/red_launchr"
                    android:layout_gravity="bottom"
                   />
               <TextView
                   android:id="@+id/tv_approval_content_state"
                   android:layout_width="wrap_content"
                   android:minWidth="50dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:text=""
                   android:textColor="@color/white"
                   android:textSize="12sp"
                   android:layout_gravity="bottom"
                   android:gravity="center"
                   android:singleLine="true"
                   />
           </LinearLayout>
            
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp"
               android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_item_approval_statut"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="in"
                    android:textColor="@color/chat_below_text"
                    android:textSize="12sp"
                    android:background="@drawable/background_text_gray"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_item_approval_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="请假"
                    android:textColor="@color/chat_below_text"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_margin="5dp"
                    android:background="@color/chat_below_text"
                    />
               <TextView 
                   android:id="@+id/tv_promise_content"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="fill_parent"
                   android:text="simtih"
                   android:textSize="12sp"
                   android:gravity="center_vertical"
                   android:textColor="@color/chat_below_text"
                   android:singleLine="true"
                   android:ellipsize="end"
                   />
               <LinearLayout 
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                  <ImageView 
                      android:id="@+id/iv_promise_attachment"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="15dp"
                     android:src="@drawable/icon_paper_clip"
                      />
                  <ImageView 
                      android:id="@+id/iv_promise_speach"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"   
                      android:paddingLeft="15dp"              
                      android:src="@drawable/icon_speach"
                      />
                   <TextView
                       android:id="@+id/tv_promise_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="11:00"
                       android:textSize="12sp"
                       android:paddingLeft="15dp"
                       android:textColor="@color/gray_launchr"
                       />
               </LinearLayout>
           </LinearLayout>
             
         </LinearLayout>
        
    </RelativeLayout>
   

</LinearLayout>
