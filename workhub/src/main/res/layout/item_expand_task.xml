<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >
	<LinearLayout android:layout_width="match_parent"
	    		  android:layout_height="wrap_content"
	    		  android:id="@+id/ll_group"
	    		  android:orientation="vertical">
	    <RelativeLayout android:layout_width="match_parent"
       			   android:layout_height="44dp">
		   <ImageView android:id="@+id/iv_color"
	  		  android:layout_width="8dp"
	  		  android:layout_height="match_parent"
	  		  android:background="@color/task_red_color"
	  		  />
	       <ImageView android:id="@+id/iv_head"
	           		  android:layout_width="27dp"
	           		  android:layout_height="27dp"
	           		  android:layout_toRightOf="@id/iv_color"
	           		  android:layout_marginLeft="7dp"
	           		  android:layout_centerVertical="true"
	           		  android:background="@color/white"
	           		  />
	       
	       <TextView android:id="@+id/tv_title"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="15sp"
	           		 android:text=""
	           		 android:layout_toRightOf="@id/iv_head"
	           		 android:layout_marginLeft="7dp"
	           		 android:singleLine="true"
	           		 android:paddingRight="40dp"
	           		 android:paddingTop="3dp"
	           		 />
	       
	       
	       <RelativeLayout android:layout_width="match_parent"
	           			   android:layout_height="wrap_content"
	           			   android:layout_toRightOf="@id/iv_head"
	           			   android:layout_alignParentBottom="true"
	           			   android:layout_marginBottom="2dp"
	           			   >
	           
	           <ImageView android:id="@+id/iv_clock"
	           		  android:layout_width="wrap_content"
	           		  android:layout_height="wrap_content"
	           		  android:layout_marginLeft="7dp"
	           		  android:src="@drawable/icon_task_clock"
	           		  android:scaleType="center"
	           		  android:layout_centerVertical="true"
	           		  />
	           
	           <TextView android:id="@+id/tv_time"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="10sp"
	           		 android:text="今日  12:30"
	           		 android:textColor="@color/task_red_color"
	           		 android:layout_toRightOf="@id/iv_clock"
	           		 android:layout_marginLeft="7dp"
	           		 android:layout_centerVertical="true"
	           		 />
	           
	           <ImageView android:id="@+id/iv_speach"
	           		  android:layout_width="wrap_content"
	           		  android:layout_height="wrap_content"
	           		  android:layout_marginLeft="10dp"
	           		  android:src="@drawable/icon_speach"
	           		  android:scaleType="center"
	           		  android:layout_centerVertical="true"
	           		  android:layout_toRightOf="@id/tv_time"
	           		  />
	           
	           
	           <TextView android:id="@+id/tv_state"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="10sp"
	           		 android:text="Done"
	           		 android:textColor="@color/task_gray_text"
	           		 android:layout_alignParentRight="true"
	           		 android:layout_centerVertical="true"
	           		 android:layout_marginRight="15dp"
	           		 android:visibility="gone"
	           		 />
	           
	           <ImageView android:id="@+id/iv_datareport"
	           		  android:layout_width="wrap_content"
	           		  android:layout_height="wrap_content"
	           		  android:layout_marginLeft="10dp"
	           		  android:src="@drawable/icon_datareport"
	           		  android:scaleType="center"
	           		  android:layout_centerVertical="true"
	           		  android:layout_toLeftOf="@id/tv_state"
	           		  android:layout_marginRight="5dp"
	           		  android:visibility="gone"
	           		  />
	       </RelativeLayout>
	       
	       <RelativeLayout 
	           		android:id="@+id/rel_group"
	           		android:layout_width="wrap_content"
	           		android:layout_height="fill_parent"
	           		android:layout_centerVertical="true"
	           		 android:layout_alignParentRight="true"
	           >
	              <ImageView 
	                  android:id="@+id/iv_direction"
	           		  android:layout_width="wrap_content"
	           		  android:layout_height="fill_parent"
	           		  android:src="@drawable/icon_left_direction"
	           		  android:scaleType="center"
	           		  android:layout_centerVertical="true"
	           		  android:layout_alignParentRight="true"
	           		  android:paddingRight="15dp"
	           		  android:paddingLeft="50dp"
	           		  />

	           
	       <TextView android:id="@+id/tv_size"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="14sp"
	           		 android:text="1/3"
	           		 android:textColor="@color/task_gray_text"
	           		 android:layout_alignParentRight="true"
	           		 android:layout_centerVertical="true"
	           		 android:layout_marginRight="30dp"
	           		 />
	           
	       </RelativeLayout>
	           
	   </RelativeLayout>
	    <ImageView android:layout_width="match_parent"
	        	   android:layout_height="1px"
	        	   android:background="@color/line_color"/>
	</LinearLayout>
   
	<LinearLayout
	    		  android:layout_width="match_parent"
	    		  android:layout_height="wrap_content"
	    		  android:id="@+id/ll_child"	    		  
	    		  android:layout_marginLeft="29dp"
	    		  android:orientation="vertical">

	    <RelativeLayout 
	        		android:layout_width="match_parent"   

       			   android:layout_height="44dp">
		   <ImageView android:id="@+id/iv_child_color"
	  		  android:layout_width="8dp"
	  		  android:layout_height="match_parent"
	  		  android:background="@color/task_red_color"
	  		  />
	       <ImageView android:id="@+id/iv_child_head"
	           		  android:layout_width="27dp"
	           		  android:layout_height="27dp"
	           		  android:layout_toRightOf="@id/iv_child_color"
	           		  android:layout_marginLeft="7dp"
	           		  android:layout_centerVertical="true"
	           		  android:background="@color/white"
			         android:focusable="false"
	           		  />
	       
	       <TextView android:id="@+id/tv_child_title"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="15sp"
	           		 android:text=""
	           		 android:layout_toRightOf="@id/iv_child_head"
	           		 android:layout_marginLeft="7dp"
	           		 android:paddingTop="3dp"
	           		  android:singleLine="true"
	           		 android:paddingRight="20dp"
	           		 />
	       
	       
	       <RelativeLayout android:layout_width="match_parent"
	           			   android:layout_height="wrap_content"
	           			   android:layout_toRightOf="@id/iv_child_head"
	           			   android:layout_alignParentBottom="true"
	           			   android:layout_marginBottom="2dp"
	           			   >
	           
	           <ImageView android:id="@+id/iv_child_clock"
	           		  android:layout_width="wrap_content"
	           		  android:layout_height="wrap_content"
	           		  android:layout_marginLeft="7dp"
	           		  android:src="@drawable/icon_task_clock"
	           		  android:scaleType="center"
	           		  android:layout_centerVertical="true"
	           		  />
	           
	           <TextView android:id="@+id/tv_child_time"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="10sp"
	           		 android:text="今日  12:30"
	           		 android:textColor="@color/task_red_color"
	           		 android:layout_toRightOf="@id/iv_child_clock"
	           		 android:layout_marginLeft="7dp"
	           		 android:layout_centerVertical="true"
	           		 />
	           
	           <ImageView android:id="@+id/iv_child_speach"
	           		  android:layout_width="wrap_content"
	           		  android:layout_height="wrap_content"
	           		  android:layout_marginLeft="10dp"
	           		  android:src="@drawable/icon_speach"
	           		  android:scaleType="center"
	           		  android:layout_centerVertical="true"
	           		  android:layout_toRightOf="@id/tv_child_time"
	           		  />
	           
	           
	           <TextView android:id="@+id/tv_child_state"
	           		 android:layout_width="wrap_content"
	           		 android:layout_height="wrap_content"
	           		 android:textSize="10sp"
	           		 android:text="Done"
	           		 android:textColor="@color/task_gray_text"
	           		 android:layout_alignParentRight="true"
	           		 android:layout_centerVertical="true"
	           		 android:layout_marginRight="15dp"
	           		 />
	           
	       </RelativeLayout>

	   </RelativeLayout>
	    <ImageView android:layout_width="match_parent"
	        	   android:layout_height="1px"
	        	   android:background="@color/line_color"/>
	</LinearLayout>


</LinearLayout>
