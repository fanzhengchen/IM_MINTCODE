<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_bg_round"
    >
        <ImageView
            android:id="@+id/iv_sign_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_mail_exist"
            />
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/tv_sign_exist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/is_exist"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="1px"
            android:background="@color/gray_launchr"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_login"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/blue_launchr"
                android:text="@string/just_login"
                />
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_launchr"
                />
            <TextView
                android:id="@+id/tv_motify"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/blue_launchr"
                android:text="@string/change_mail"
                />
        </LinearLayout>

</LinearLayout>