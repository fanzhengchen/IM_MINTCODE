<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
	
    <ImageView android:id="@+id/iv_line"
        	   android:layout_width="match_parent"
        	   android:layout_height="1px"
        	   android:src="@color/line_color"
        	   />
    
    <TextView android:id="@+id/tv_icon_name"
        	  android:layout_width="match_parent"
        	  android:gravity="center"
        	  android:layout_height="wrap_content"
        	  android:textColor="@drawable/tablhost_main_textcolor"
        	  android:text="消息"
        	  android:layout_alignParentBottom="true"
        	  android:textSize="10sp"
        	  android:visibility="gone"
        	  android:layout_marginBottom="1dp"/>
    
    <ImageView android:id="@+id/iv_icon"
        	   android:layout_width="46.66dp"
        	   android:layout_height="46.66dp"
        	   android:src="@drawable/icon_message"
        	   android:layout_centerHorizontal="true"
        	   android:layout_alignParentBottom="true"
        	   android:adjustViewBounds="true"
        	   android:scaleType="center"/>
    
</RelativeLayout>
