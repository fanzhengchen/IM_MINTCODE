<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_item_type"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/red_launchr"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <LinearLayout
                android:id="@+id/ll_item_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/gray_launchr"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/tv_item_time_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/gray_launchr"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_item_place"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/iv_item_place"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/event_place"
                    />
                <TextView
                    android:id="@+id/tv_item_place"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/gray_launchr"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>