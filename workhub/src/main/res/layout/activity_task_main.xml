<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white" >
            <ImageView
                android:id="@+id/iv_task_menu"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scaleType="centerInside"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_task_menu_blue"
                />
            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/task_close"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/blue_launchr"
                android:layout_toRightOf="@+id/iv_task_menu"
                />

            <TextView
                android:id="@+id/tv_task_project_title"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/iv_task_member"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_task_project_edit"
                android:layout_toLeftOf="@+id/iv_task_add"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_task_add"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_add_bule"
                />
            <ImageView
                android:id="@+id/iv_task_search"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:background="@drawable/white_bg_selected"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_chat_search"
                android:visibility="gone"
                />
           />
        </RelativeLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/title_approval_bar"
            android:src="@color/line_color" />
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/title_approval_bar"
            android:src="@color/line_color" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sliding_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="start"
        >
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:background="@color/task_menu_color"
            >
            <ListView
                android:id="@+id/left_time_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:scrollbars="none"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/task_project"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white_transparency"
                />
            <LinearLayout
                android:id="@+id/ll_task_add_new_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/icon_task_add_project"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/task_add_project"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/edit_new_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:visibility="gone"
                android:singleLine="true"
                android:background="@drawable/bg_chat_input"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/left_drawer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:paddingTop="10dp"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/backgroud_with_shadow"
            />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>