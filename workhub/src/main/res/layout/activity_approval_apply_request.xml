<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
     >
     <LinearLayout 
         	     android:layout_width="match_parent"
        		  android:layout_height="wrap_content" 
        		  android:orientation="vertical"
        		  android:id="@+id/ll_contact"/>
     
     <RelativeLayout android:layout_width="match_parent"
		       		      android:layout_height="50dp"
		       		      >
       		<TextView 
       		    	  android:id="@+id/tv_apply_edit_title"
       		    	  android:text="@string/apply_new"
       		    	  android:textSize="16sp"
       		    	  android:textColor="@color/black"
       		    	  android:layout_centerInParent="true"
       		    	  android:layout_width="wrap_content"
       		    	  android:layout_height="wrap_content"/>
       		
       		<TextView 
       		    		android:id="@+id/tv_apply_canel"
       		    		android:text="@string/cancel"
       		    	  android:textSize="15sp"
       		    	  android:textColor="@color/blue_launchr"
       		    	  android:layout_centerInParent="true"
       		    	  android:layout_width="wrap_content"
       		    	  android:layout_alignParentLeft="true"
       		    	  android:gravity="center_vertical"
       		    	  android:paddingLeft="19dp"
       		    	  android:paddingRight="10dp"
       		    	  android:layout_height="match_parent"/>
       		
       		<TextView 
       		    	  android:id="@+id/tv_apply_send"
       		    	  android:text="@string/accpect_send_message"
       		    	  android:textSize="15sp"
       		    	  android:textColor="@color/blue_launchr"
       		    	  android:layout_centerInParent="true"
       		    	  android:layout_width="wrap_content"
       		    	  android:layout_alignParentRight="true"
       		    	  android:gravity="center_vertical"
       		    	  android:paddingLeft="10dp"
       		    	  android:paddingRight="17dp"
       		    	  android:layout_height="match_parent"/>
       		
   		</RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
        >
   <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/white"
	    android:focusableInTouchMode="true"
	    android:orientation="vertical" >     
    
   		
	     <ImageView 
		    android:layout_width="fill_parent"
		    android:layout_height="15dp"
		    android:src="@color/gray_bar_launchr"
		    />
	     		<EditText 
	         		android:id="@+id/edt_apply_tilte"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
                    android:gravity="top"
				    android:padding="15dp"
				    android:background="@color/white"
				    android:hint="@string/title"
				    android:textSize="15sp"
				    android:textColorHint="@color/gray_launchr"
                    android:maxLines="5"
				    />
		<!--<ImageView -->
		    <!--android:layout_width="fill_parent"-->
		    <!--android:layout_height="1px"-->
		    <!--android:src="@color/gray_bar_launchr"-->
		    <!--/>-->
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="15dp"
           android:src="@color/gray_bar_launchr"
           />
       <RelativeLayout
           android:id="@+id/rl_apply_toleave"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:clickable="true"
           android:background="@drawable/white_bg_selected"
           >
           <TextView
               android:id="@+id/tv_apply_null"
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:paddingLeft="@dimen/calendar_padding_left"
               android:gravity="center"
               android:text="@string/accpect_time"
               android:textSize="15sp"
               android:textColor="@color/meeting_gray"
               />
           <TextView
               android:id="@+id/tv_apply_time"
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:layout_alignParentRight="true"
               android:drawableRight="@drawable/icon_right_on"
               android:drawablePadding="10dp"
               android:layout_marginRight="20dp"
               android:gravity="center"
               android:textSize="15sp"
               />
       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/rl_apply_apply_cost"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:paddingLeft="@dimen/calendar_padding_left"
               android:gravity="center"
               android:text="@string/accpect_cost"
               android:textSize="15sp"
               android:textColor="@color/meeting_gray"
               />
           <!--<TextView-->
               <!--android:layout_width="wrap_content"-->
               <!--android:layout_height="fill_parent"-->
               <!--android:gravity="center"-->
               <!--android:layout_toLeftOf="@+id/edt_apply_cost"-->
               <!--android:textSize="14sp"-->
               <!--android:text="@string/money_symbol"-->
               <!--/>-->
           <EditText
               android:id="@+id/edt_apply_cost"
               android:layout_width="wrap_content"
               android:minWidth="100dp"
               android:maxWidth="200dp"
               android:layout_height="fill_parent"
               android:layout_alignParentRight="true"
               android:layout_marginRight="15dp"
               android:paddingLeft="15dp"
               android:gravity="right|center_vertical"
               android:textSize="14sp"
               android:background="@null"
               android:inputType="number"
               android:maxLength="20"
               />
       </RelativeLayout>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="15dp"
           android:src="@color/gray_bar_launchr"
           />



		<RelativeLayout
	        android:id="@+id/rl_apply_promise_person"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true" 
	        android:background="@drawable/white_bg_selected"
         >
       <TextView
           android:id="@+id/tv_apply_promise_person_name"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:paddingLeft="@dimen/calendar_padding_left"
           android:gravity="center"
           android:layout_centerVertical="true"
           android:text="@string/accpect_promise_person"
           android:textSize="15sp"
           android:textColor="@color/meeting_gray"
             />
       <com.mintcode.launchr.widget.CollapsibleTextView
           android:id="@+id/tv_apply_promise_person"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:layout_alignParentLeft="true"
           android:layout_toLeftOf="@+id/iv_person_right"
           android:layout_marginLeft="90dp"
           android:layout_marginRight="8dp"
           android:gravity="left"
           android:textSize="15sp"
           android:text=""
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
             />
            <ImageView
                android:id="@+id/iv_person_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/icon_right_on"/>
    </RelativeLayout>
    	
		<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:src="@color/line_color"
		    />
		
	<RelativeLayout
	        android:id="@+id/rl_apply_copyto_person"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true" 
	        android:background="@drawable/white_bg_selected"
         >
       <TextView
           android:id="@+id/tv_apply_copyto_person_name"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:paddingLeft="@dimen/calendar_padding_left"
           android:gravity="center"
           android:layout_centerVertical="true"
           android:text="@string/accpect_promise_copy"
           android:textSize="15sp"
           android:textColor="@color/meeting_gray"
             />
       <com.mintcode.launchr.widget.CollapsibleTextView
           android:id="@+id/tv_apply_copyto_person"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:layout_alignParentLeft="true"
           android:layout_toLeftOf="@+id/iv_copyto_person_right"
           android:layout_marginRight="8dp"
           android:layout_marginLeft="90dp"
           android:gravity="left"
           android:textSize="15sp"
           android:text=""
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
             />

        <ImageView
            android:id="@+id/iv_copyto_person_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_right_on"/>
    </RelativeLayout>
    
	<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="15dp"
		    android:src="@color/gray_bar_launchr"
		    />
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/calendar_padding_left"
            android:text="@string/accpect_state"
            android:textSize="15sp"
            android:textColor="@color/meeting_gray"
             >
        </TextView>
        
         <CheckBox 
            android:id="@+id/cb_apply_state"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/checkbox_seletor_red"
            />    
    </RelativeLayout>
    
    	<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:src="@color/line_color"
		    />
	
	<RelativeLayout
        android:id="@+id/rl_apply_last_time"
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <TextView
            android:id="@+id/tv_apply_null2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/calendar_padding_left"
            android:text="@string/accpect_new_last_time"
            android:textSize="15sp"
            android:textColor="@color/meeting_gray"
             >
        </TextView>
        	<TextView
        	    android:id="@+id/tv_apply_last_time" 
        	    android:layout_width="wrap_content"
        	    android:layout_height="fill_parent"
        	    android:layout_toRightOf="@+id/tv_apply_null2"
        	    android:layout_marginLeft="15dp"
        	    android:gravity="center"
        	    android:textSize="15sp"
        	    />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_right_on"/>


    </RelativeLayout>
    

    


	
    
    	<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="15dp"
		    android:src="@color/gray_bar_launchr"
		    />
    	
	<RelativeLayout
	        android:id="@+id/rl_apply_attachment"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true" 
	       android:background="@drawable/white_bg_selected"
         >
       <TextView 
           android:id="@+id/tv_apply_attachment"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:paddingLeft="@dimen/calendar_padding_left"
           android:gravity="center"
           android:text="@string/accpect_attachment"
           android:textSize="15sp"
           android:textColor="@color/meeting_gray"
             />
       
       <ImageView 
           android:id="@+id/iv_apply_add_image"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_alignParentRight="true"          
           android:gravity="center"
           android:paddingRight="20dp"
           android:paddingLeft="20dp"
           android:src="@drawable/icon_right_on"
           
             />
       <com.mintcode.launchr.photo.util.NoScrollGridView
           android:id="@+id/gv_apply_add_photo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toLeftOf="@+id/iv_apply_add_image"
           android:layout_toRightOf="@+id/tv_apply_attachment"
           android:padding="15dp"
           android:numColumns="3"
           android:scrollbars="none"
           android:verticalSpacing="25dp"
           >
           
       </com.mintcode.launchr.photo.util.NoScrollGridView>
    </RelativeLayout>
    	<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:src="@color/gray_bar_launchr"
		    />
    	
    	<EditText 
           android:id="@+id/edt_apply_remark"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
            android:minHeight="150dp"
           android:background="@null"
           android:gravity="top"
           android:paddingLeft="@dimen/calendar_padding_left"
           android:layout_marginTop="8dp"
           android:layout_marginRight="20dp"
           android:inputType="textMultiLine"
           android:hint="@string/remark"
           android:textColorHint="@color/gray_launchr"
           android:textSize="15sp"
            android:maxLines="10"
             />
    	</LinearLayout>
    </ScrollView>
</LinearLayout>
