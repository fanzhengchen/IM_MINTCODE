<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_ruth_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/chat_below_text"
            android:text="@string/my_change_number"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <EditText
            android:id="@+id/edt_auth_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/input_identify"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@null"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/blue_launchr"
            android:text="@string/my_change_get_number"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_launchr"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/chat_below_text"
            android:text="@string/my_password"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_password_hit"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/cb_see_password"
                android:textColor="@color/black"
                android:background="@null"
                android:singleLine="true"
                android:inputType="textPassword"
                />
            <CheckBox
                android:id="@+id/cb_see_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/select_login_eye"
                android:paddingLeft="15dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_below="@id/edt_password">

                <ImageView
                    android:id="@+id/iv_paddword_line1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/shape_line_gray"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/iv_paddword_line2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/shape_line_gray"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/iv_paddword_line3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/shape_line_gray"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>