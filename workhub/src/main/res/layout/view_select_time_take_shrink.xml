<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="248dp"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/iv_schedule_time_selelct_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_top_margin"
        android:background="@color/light_gray"
        />

			    <RelativeLayout
			        android:id="@+id/rl_schedule_time_select_null"
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:background="@color/white"
			        android:layout_below="@+id/iv_schedule_time_selelct_null" >

			        <TextView 
			            android:id="@+id/tv_schedule_time_title"
			            android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:layout_alignParentLeft="true"
				        android:paddingLeft="@dimen/standard_left_margin"
				        android:gravity="center"
				        android:text="@string/calendar_timepicker_date2"
				        android:textSize="15sp"
			            />
			        <TextView 
				        android:id="@+id/tv_schedule_time_get_title"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:gravity="center"
				        android:layout_toRightOf="@+id/tv_schedule_time_title"
				        android:layout_marginLeft="10dp"
				        android:text="time"
				        android:textSize="14sp"
			        />	
			         <ImageButton
				        android:id="@+id/ibn_schedule_time_select_delect"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:layout_alignParentRight="true"
				        android:background="@drawable/white_bg_selected"
				        android:src="@drawable/icon_drop_down"	
				        android:paddingRight="@dimen/standard_right_margin"
				        android:paddingLeft="20dp"/>
			    </RelativeLayout>
			     <com.mintcode.launchr.timer.Timer 
				    android:layout_below="@+id/rl_schedule_time_select_null"
	           		android:layout_width="match_parent"
	           		android:background="@color/white"
	           		android:layout_height="190dp"
	           		android:id="@+id/timer"
           		>          
      			 </com.mintcode.launchr.timer.Timer>
   
					 
</RelativeLayout>
