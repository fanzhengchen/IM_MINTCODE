<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_menu"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/divider_gray" />

    <TextView
        android:id="@+id/tv_new_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_new_event"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="@string/new_event"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />
    <TextView
        android:id="@+id/tv_new_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_new_meetin"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="@string/new_meeting"
        android:textColor="@color/black" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <TextView
        android:id="@+id/tv_see_other_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_new_schedule"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="@string/see_other_shedule"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_google_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_google_schedule"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="@string/google_shedule"
        android:textColor="@color/black" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/divider_gray" />

</LinearLayout>