<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rel_head"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/my_head_background" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/iv_head_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:contentDescription="@null"
                android:src="@drawable/gesture_pattern_selected" />

            <TextView
                android:id="@+id/tv_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_head_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Skye Feng"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_my_phone"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_album"
                android:textColor="@color/gray_task" />

            <TextView
                android:id="@+id/tv_my_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="15858778888"
                android:textColor="@color/gray_text_launchr" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_my_mail"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_collection"
                android:textColor="@color/gray_task" />

            <TextView
                android:id="@+id/tv_my_mail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="skeyfeng@qq.com"
                android:textColor="@color/gray_text_launchr" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_my_room_phone"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_room_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_comment"
                android:textColor="@color/gray_task" />

            <TextView
                android:id="@+id/tv_my_room_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="0518-5788888"
                android:textColor="@color/gray_text_launchr" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_my_dept"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_dept"
                android:textColor="@color/gray_task" />

            <TextView
                android:id="@+id/tv_my_dept_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="Zeus"
                android:textColor="@color/gray_text_launchr" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_my_job"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_job"
                android:textColor="@color/gray_task" />

            <TextView
                android:id="@+id/tv_my_job_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="产品"
                android:textColor="@color/gray_text_launchr" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_my_calling_card"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_calling_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_calling_card"
                android:textColor="@color/gray_task" />

            <ImageView
                android:id="@+id/iv_my_calling_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_right_on" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_my_share"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/white_bg_selected" >

            <TextView
                android:id="@+id/tv_my_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/my_share"
                android:textColor="@color/gray_task" />

            <ImageView
                android:id="@+id/iv_my_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_right_on" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>