<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_group"
        android:orientation="vertical"
        >
        <ImageView android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_color"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/task_red_color"
                    />
                <CheckBox
                    android:id="@+id/cb_group_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/task_finish_select_state"
                    android:button="@null"
                    android:focusable="false"
                    android:checked="false" />
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:paddingRight="40dp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_for_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_task_for_project"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="7dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:textColor="@color/chat_below_text"
                        android:maxLength="10"
                        android:ellipsize="end"
                        />

                    <ImageView android:id="@+id/iv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray_clock"
                        android:layout_marginRight="7dp"
                        android:scaleType="center"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/chat_below_text"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginRight="7dp"
                        />


                    <ImageView
                        android:id="@+id/iv_attament"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/icon_paper_clip"
                        android:scaleType="center"
                        />
                    <ImageView
                        android:id="@+id/iv_speach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/icon_speach"
                        android:scaleType="center"
                        />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Done"
                        android:textColor="@color/task_gray_text"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/iv_datareport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_datareport"
                        android:scaleType="center"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rel_group"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="1/3"
                    android:textColor="@color/task_gray_text"
                    />
                <ImageView
                    android:id="@+id/iv_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingRight="15dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_left_direction"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_task_child"
            android:layout_marginLeft="29dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_child_color"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/task_red_color"
                    />

                <CheckBox
                    android:id="@+id/cb_child_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"

                    android:background="@drawable/task_finish_select_state"
                    android:button="@null"
                    android:focusable="false"
                    />
                <ImageView
                    android:id="@+id/iv_child_head"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_child_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=""
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:paddingRight="20dp"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        >

                        <ImageView android:id="@+id/iv_child_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/gray_clock"
                            android:scaleType="center"
                            />

                        <TextView android:id="@+id/tv_child_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/chat_below_text"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginRight="7dp"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:id="@+id/iv_child_attament"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/icon_paper_clip"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            />
                        <ImageView android:id="@+id/iv_child_speach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/icon_speach"
                            android:scaleType="center"
                            android:layout_centerVertical="true"
                            />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <ImageView android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_height"
            android:orientation="horizontal"
            >
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_menu"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout android:layout_width="219dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_taskmenu_clock"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/task_yellow_bg">
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_clock_menu"
                        android:scaleType="center"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_taskmenu_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/task_gray_bg">
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_pencil_menu"
                        android:scaleType="center"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                 <RelativeLayout
                    android:id="@+id/rl_taskmenu_tab"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/task_blue_bg">
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_datareport_menu"
                        android:scaleType="center"
                        android:layout_centerInParent="true"/>
                 </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/hs_taskmenu_selector"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="gone"
            >
            <RadioGroup android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rg_menu"
                android:background="@color/gray_bar_launchr"

                android:orientation="horizontal">

            </RadioGroup>


        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>