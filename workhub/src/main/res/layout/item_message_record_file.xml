<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp" >

        <com.mintcode.launchr.view.RoundRectImageView
            android:id="@+id/iv_message_record_file_headr"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_app_apply" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_message_record_file_headr"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_message_record_file_headr" >

            <TextView
                android:id="@+id/tv_message_record_file_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_message_record_file_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/chat_below_text"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_message_record_file_headr"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_message_record_file_headr"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_message_record_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/chat_below_text"
                android:textSize="12.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/message_from"
                android:textColor="@color/chat_below_text"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/tv_message_record_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12.5sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>